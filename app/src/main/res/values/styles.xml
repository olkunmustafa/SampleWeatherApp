<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CardItemKey">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CardItemTextWrapper">
        <item name="android:layout_marginBottom">@dimen/cardview_item_wrapper_ptb</item>
    </style>

    <style name="DetailItemViewStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginRight">@dimen/detail_wrapper_item_mrl</item>
        <item name="android:layout_marginLeft">@dimen/detail_wrapper_item_mrl</item>
        <item name="android:layout_marginEnd">@dimen/detail_wrapper_item_mrl</item>
        <item name="android:layout_marginStart">@dimen/detail_wrapper_item_mrl</item>
        <item name="android:layout_marginTop">@dimen/detail_wrapper_item_mrl</item>
        <item name="android:layout_marginBottom">@dimen/detail_wrapper_item_mrl</item>
    </style>

</resources>
